@model IEnumerable<PROG2231.Web.Models.Post>

@{
    ViewData["Title"] = "Tech Tips";
}

<div class="bg-dark text-white py-5 mb-5 position-relative">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-3 fw-bold mb-3">ByteSized</h1>
                <p class="lead mb-0">Tech Tips & Insights in Bite-Sized Pieces</p>
            </div>
            @if (User.Identity?.IsAuthenticated == true)
            {
                <div class="col-lg-4 text-lg-end position-absolute bottom-0 end-0 pb-3 pe-4">
                    <a asp-action="Create" class="btn btn-light btn-lg">
                        <i class="bi bi-plus-circle"></i> Create New Post
                    </a>
                </div>
            }
        </div>
    </div>
</div>


<div class="container mb-5">
    @if (Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <article class="card h-100 shadow-sm border-0 hover-lift">
                        <!-- Post Image -->
                        @if (!string.IsNullOrEmpty(item.PostImage))
                        {
                            <img src="@item.PostImage" class="card-img-top" alt="@item.Title"
                                style="height: 220px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-gradient d-flex align-items-center justify-content-center"
                                style="height: 220px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                <i class="bi bi-code-slash text-white" style="font-size: 4rem; opacity: 0.7;"></i>
                            </div>
                        }

                        <div class="card-body d-flex flex-column">
                            <!-- Category & Tag -->
                            <div class="mb-2">
                                @if (item.Category != null)
                                {
                                    <span class="badge bg-primary rounded-pill">
                                        @item.Category.Name
                                    </span>
                                }
                                @if (item.Tag != null)
                                {
                                    <span class="badge bg-secondary rounded-pill">
                                        @item.Tag.Name
                                    </span>
                                }
                            </div>

                            <!-- Post Title -->
                            <h5 class="card-title fw-bold mb-2">
                                <a asp-action="Details" asp-route-id="@item.Id"
                                    class="text-decoration-none text-dark stretched-link">
                                    @item.Title
                                </a>
                            </h5>

                            <!-- Author & Date -->
                            <div class="text-muted small mb-3">
                                @if (!string.IsNullOrEmpty(item.Author))
                                {
                                    <span>
                                        <i class="bi bi-person-fill"></i> @item.Author
                                    </span>
                                    <span class="mx-1">â€¢</span>
                                }
                                <span>
                                    <i class="bi bi-calendar3"></i>
                                    @item.CreatedAt.ToString("MMM dd, yyyy")
                                </span>
                            </div>

                            <!-- Excerpt -->
                            <p class="card-text text-muted mb-3 flex-grow-1">
                                @if (!string.IsNullOrEmpty(item.Excerpt))
                                {
                                    @(item.Excerpt.Length > 120 ? item.Excerpt.Substring(0, 120) + "..." : item.Excerpt)
                                }
                                else
                                {
                                    <em>No excerpt available</em>
                                }
                            </p>

                            <!-- Read More Link -->
                            <div class="mt-auto">
                                <span class="text-primary fw-semibold">
                                    Read More <i class="bi bi-arrow-right"></i>
                                </span>
                            </div>
                        </div>

                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <!-- Only visible when user logged in -->
                            <div class="card-footer bg-transparent border-top">
                                <div class="btn-group btn-group-sm w-100" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary position-relative"
                                        style="z-index: 10;">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger position-relative"
                                        style="z-index: 10;">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </div>
                        }
                    </article>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <h3 class="text-muted">No posts have been published yet.</h3>
        </div>
    }
</div>

<style>
    .hover-lift {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .hover-lift:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15) !important;
    }

    .card-title a {
        transition: color 0.2s ease;
    }

    .card-title a:hover {
        color: #0d6efd !important;
    }

    .stretched-link::after {
        z-index: 1;
    }
</style>