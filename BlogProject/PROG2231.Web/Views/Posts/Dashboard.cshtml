@model IEnumerable<PROG2231.Web.Models.Post>

@{
    ViewData["Title"] = "Dashboard";
}

<h2>Dashboard</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Post</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Tag</th>
            <th>Author</th>
            <th>Created At</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var post in Model)
{
    <tr>
        <td>@post.Title</td>
        <td>@post.Category?.Name</td>
        <td>@post.Tag?.Name</td>
        <td>@(string.IsNullOrEmpty(post.Author) ? "Unknown" : post.Author)</td>
        <td>@post.CreatedAt.ToString("yyyy-MM-dd")</td>
        <td>
            <a asp-action="Edit" asp-route-id="@post.Id" class="btn btn-sm btn-outline-primary">Edit</a>
            <a asp-action="Delete" asp-route-id="@post.Id" class="btn btn-sm btn-outline-danger">Delete</a>
        </td>
    </tr>
}
    </tbody>
</table>
