@model PROG2231_Assignment2__9031031_.Models.Laptop
@{
    ViewData["Title"] = "Confirm Delete";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
</head>
<body>


<div>
    <h2>@ViewData["Title"]</h2>
    <h3 class = "mb-5">Are you sure you want to delete this?</h3>

    <dl class="row">
        <dt class = "col-sm-2 mb-3">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class = "col-sm-10 mb-3">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class = "col-sm-2 mb-3">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class = "col-sm-10 mb-3">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class = "col-sm-2 mb-3">
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd class = "col-sm-10 mb-3">
            @Html.DisplayFor(model => model.Year)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="LaptopId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-outline-warning rounded shadow-sm">Back to List</a>
    </form>
</div>
<div class="text-center">
    <img src="~/img/MJ_Logo.png" alt="Laptop Image" class="img-fluid rounded shadow-sm" style="max-width: 200px;">
</div>
</body>
</html>
