@{
    ViewData["Title"] = "Contact Us";
}

<h2 class="display-6 mb-4">Get in Touch with MJ Line</h2>
<p class="mb-4">Fill out the form below and we'll get back to you soon!</p> <!-- Short instruction -->

<!-- Card container to center the form and give it a nice style -->
<div class="card p-4 shadow-sm" style="max-width: 600px">
<form method="post">
    <div class="mb-3">
        <label class="form-label">Full Name</label>
        <input type="text" name="name" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Email Address</label>
        <input type="email" name="email" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Subject</label>
        <input type="text" name="subject" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Message</label>
        <textarea name="message" class="form-control" rows="4"></textarea>
    </div>
    <button type="submit" class="btn btn-dark w-100">Send Message</button>
</form>

<!-- Confirmation message after successful submission -->
@if (ViewBag.Confirmation != null)
{
    <div class="alert alert-success mt-3 text-center">
        @ViewBag.Confirmation
    </div>
}
</div>